---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';

const { title, description = "Portfolio of Ketan Pandya, a Product Designer specializing in complex systems.", isHome = false, headerStyle = "default" } = Astro.props;
const effectiveHeaderStyle = isHome || headerStyle === 'blue' ? 'blue' : 'default';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <!-- Add a favicon if available, or use a default one -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
  </head>
  <body>
    <Header style={effectiveHeaderStyle} />
    <slot name="hero" />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>