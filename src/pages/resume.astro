---
import Layout from '../layouts/Layout.astro';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ketan Pandya - Resume</title>
    <style>
        /* Base Reset & Typography */
        :root {
            --font-main: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            --color-text: #111827;
            --color-text-muted: #475569;
            --color-brand-blue: #1e3a8a;
            --color-accent: #2563eb;
            --spacing-section: 2rem;
        }

        html {
            box-sizing: border-box;
            font-size: 11pt; /* Optimum print size */
        }

        *, *:before, *:after {
            box-sizing: inherit;
        }

        body {
            font-family: var(--font-main);
            color: var(--color-text);
            line-height: 1.5;
            margin: 0;
            padding: 0;
            background: #f3f4f6; /* Light grey background for web view */
        }

        /* The "Paper" Container */
        .page {
            background: white;
            width: 8.5in;
            margin: 2rem auto;
            padding: 0.75in; /* Standard margins */
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            min-height: 11in; /* This is for web view to look like paper */
        }

        /* Header */
        header {
            margin-bottom: 2.5rem;
        }

        h1 {
            font-size: 2.2rem;
            font-weight: 700;
            margin: 0;
            letter-spacing: -0.03em;
            line-height: 1;
        }

        .title {
            font-size: 1.1rem;
            color: var(--color-text-muted);
            margin-top: 0.25rem;
            font-weight: 500;
        }

        .contact-info {
            margin-top: 0.75rem;
            font-size: 0.9rem;
            color: var(--color-text-muted);
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            font-weight: 500; /* Confident medium weight */
        }

        .contact-info a {
            color: var(--color-text-muted);
            text-decoration: none;
            border-bottom: 1px solid #e5e7eb;
        }

        /* Sections */
        section {
            margin-bottom: 2rem;
        }

        h2 {
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.15em;
            color: var(--color-brand-blue); 
            border-bottom: 1px solid #cbd5e1;
            padding-bottom: 0.5rem;
            margin: 0 0 1.25rem 0;
            font-weight: 700;
        }

        /* Experience Items */
        .job-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 0.25rem;
        }

        .job-title {
            font-weight: 700;
            font-size: 1.05rem;
        }

        .company {
            font-weight: 600;
        }

        .location-date {
            font-size: 0.9rem;
            color: var(--color-text-muted);
            text-align: right;
            font-weight: 600; /* Make dates/locations stand out */
        }

        .job-item {
            margin-bottom: 1.5rem;
        }

        .job-item ul {
            margin: 0.5rem 0 0 0;
            padding-left: 1.2rem;
        }

        .job-item li {
            margin-bottom: 0.4rem;
            color: #374151; /* Slightly lighter text for body */
        }

        .job-item li strong {
            color: #111827; /* Darker for emphasized words */
            font-weight: 600;
        }

        /* Education & Skills Grid */
        .grid-section {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .edu-item {
            margin-bottom: 1.5rem;
        }
        
        .edu-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.1rem;
        }

        .degree {
            font-weight: 700;
        }

        .school {
            font-weight: 500;
        }

        .edu-details {
            font-size: 0.9rem;
            color: var(--color-text-muted);
            margin-top: 0.3rem;
            line-height: 1.4;
        }

        .edu-details strong {
            color: var(--color-text);
            font-weight: 600;
        }

        /* Skills Lists */
        .skill-group {
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .skill-label {
            font-weight: 700;
            margin-right: 0.5rem;
        }
        
        /* Print Overrides */
        @media print {
            @page {
                margin: 0;
                size: letter;
            }
            body {
                margin: 0;
                padding: 0;
                width: 100%;
                height: 100%;
                background: white;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
                overflow: hidden; /* Prevent body from scrolling/page-breaking */
            }
            .page {
                width: 7.5in !important; 
                max-width: 7.5in !important;
                margin: 0.5in auto !important;
                padding: 0 !important;
                box-shadow: none;
                border: none;
                min-height: 0 !important; /* Kill the 11in requirement for print */
                height: auto !important;
                overflow: hidden;
            }
            
            /* TIGHTEN SPACING FOR PRINT */
            header {
                margin-bottom: 1.5rem !important; /* Reduced from 2.5rem */
            }
            .contact-info {
                margin-top: 0.5rem !important; /* Reduced from 0.75rem */
                gap: 1rem !important;
            }
            section {
                margin-bottom: 1.25rem !important; /* Reduced from 2rem */
            }
            h2 {
                margin: 0 0 0.75rem 0 !important; /* Reduced bottom margin */
                padding-bottom: 0.25rem !important;
            }
            .job-item {
                margin-bottom: 1rem !important; /* Reduced from 1.5rem */
            }
            .edu-item {
                margin-bottom: 1rem !important;
            }
            .grid-section {
                gap: 1rem !important;
            }

            html {
                font-size: 9pt; 
            }
            /* Hide web-only elements */
            .no-print {
                display: none !important;
            }
            a {
                text-decoration: none;
                color: black;
            }
            a[href^="http"]:after {
                content: ""; 
            }
            ::-webkit-scrollbar {
                display: none;
            }
        }
    </style>
</head>
