---
const { title, id } = Astro.props;
---

<div class="process-section" id={id}>
  {title && <h3>{title}</h3>}
  <div class="content">
    <slot />
  </div>
</div>

<style>
  .process-section {
    background-color: #f1f5f9; /* Slate 100 - Slightly darker than page bg */
    border: 1px solid var(--color-border); /* Full border */
    border-radius: 12px;
    padding: 3rem 2rem;
    margin-top: 4rem;
  }

  h3 {
    color: var(--color-text-muted);
    font-style: italic;
    margin-top: 0;
    margin-bottom: 2rem;
    font-size: 1.5rem;
    font-weight: var(--font-weight-heading);
  }

  /* Ensure content inside doesn't have weird top margins */
  .content :global(> *:first-child) {
    margin-top: 0;
  }
</style>