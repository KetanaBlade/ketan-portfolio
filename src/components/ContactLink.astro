---
const { type, href, label, isExternal = false } = Astro.props;

const icons = {
  email: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>',
  linkedin: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>',
  resume: '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>'
};

const icon = icons[type];
---

<div class="contact-link-container">
  {icon && <span class="contact-icon" set:html={icon} />}
  <a 
    href={href} 
    target={isExternal ? "_blank" : undefined} 
    rel={isExternal ? "noopener noreferrer" : undefined}
    class="contact-anchor"
  >
    <span class="contact-label">{label}</span>
  </a>
</div>

<style>
  .contact-link-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .contact-icon {
    display: flex;
    align-items: center;
    color: var(--color-brand-blue);
    flex-shrink: 0;
  }

  .contact-anchor {
    color: inherit;
    text-decoration: none;
    border-bottom: 1px solid var(--color-border-link-subtle);
    transition: border-color 0.2s, color 0.2s;
  }

  .contact-anchor:hover {
    color: var(--color-accent);
    border-bottom-color: var(--color-accent);
  }

  .contact-label {
    display: flex;
    align-items: center;
    height: 18px; /* Alignment baseline we established */
    line-height: 1;
  }
</style>