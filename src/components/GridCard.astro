---
const { title, icon, description } = Astro.props;
---

<div class="grid-card">
  <div class="icon">{icon}</div>
  <h3>{title}</h3>
  <p>{description}</p>
</div>

<style>
  .grid-card {
    background: #fff;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.02);
    transition: transform 0.2s;
  }

  .grid-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 15px rgba(0,0,0,0.05);
  }

  .icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    font-weight: var(--font-weight-heading);
    color: var(--color-text);
  }

  p {
    font-size: 0.95rem;
    color: var(--color-text-light);
    margin: 0;
    line-height: 1.5;
  }
</style>